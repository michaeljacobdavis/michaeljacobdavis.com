header
  background: transparent url(../images/texture.jpg);
  padding: 3%
  border-bottom: 1px solid #ccc


  h1,h2
    color: #505d63

  .qualifications
    font-size: 1.1em

    li
      line-height: 1.6em

  .info
    font-size: 1.3em
    line-height: 2em

    .info-item
      padding: .5em
      margin: .5em

      i
        width: 1.2em
        display: inline-block

    a
      color: #333

      &:hover
        text-decoration: none
        background: #3a7aa6
        color: #fff

main
  padding: 3%

  section
    margin-left: 5%

  h2
    margin-top: 1em
    color: #ccc

    i
      color: #777

  h3
    color: #627076
