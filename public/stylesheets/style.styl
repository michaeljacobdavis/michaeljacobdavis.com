@import 'mixins'
@import 'print'
html body
  padding: 0

.hidden-screen
  display: none

ul.styled
  font-size: 1.1em
  list-style-type: none
  margin-left: 0
  padding-left: 1em
  text-indent: -1em

  li
    line-height: 1.6em
    list-style-type: none
    padding-left: 2em
    text-indent: -1em

    &:before
      content: '\f138'
      font-family: 'FontAwesome'
      margin-right: 1em
      margin-left: -1em

@media (max-width: 767px)
  .intro
    padding: 0 2.5%

  header
    background-size: auto 100%

header
  background: url(http://farm7.staticflickr.com/6156/6193763495_339cc499ae_o.png) no-repeat 0 -150px fixed
  background-size: cover
  padding: 8%
  border-bottom: 1px solid #ccc


  .intro
    background: rgba(0,0,0,0.4)

    .header-box
      margin: 0 2.5% !important

  h1,h2
    color: #fff
    text-shadow: 1px 1px 1px rgba(0,0,0,0.8)

  p.about-me
    color: #fff
    text-shadow: 1px 1px 1px rgba(0,0,0,0.8)

  .info
    font-size: 1.3em
    line-height: 2em

    .info-item
      color: #fff
      padding: .5em
      margin: .5em
      text-shadow: 1px 1px 1px rgba(0,0,0,0.8)
      i
        width: 1.2em
        display: inline-block

    a
      color: #333

      &:hover
        text-decoration: none
        background-color: #0099e8
        color: #fff

main
  padding: 3%

  section
    margin-left: 5%

  h2
    margin-top: 1em
    color: #0099e8
    white-space: nowrap

    i
      color: #777

  h3
    color: #627076

  time
    padding: .5em
    background: #0099e8
    color: #fff
    margin: .5em 0
    display: inline-block
    background: #0099e8

  ul.tags
    list-style-type: none
    padding: 0
    margin: 0


    li.tag
      background: #ddd
      display: inline-block
      padding: .35em
      margin: .25em

.no-cssgradients .view-source
  display: none

.view-source
  position: absolute
  z-index: 1

  code.fake-html
    position: absolute
    z-index: -1
    transition: all .5s ease
    width: 20px
    height: 20px
    overflow: hidden
    box-sizing: border-box
    background: #073642
    border: none

  &:hover
    code.fake-html
      width: 100px
      height: 100px

    .curl
      width: 100px
      height: 100px

      &:before,
      &:after 
        box-shadow: 0 24px 30px rgba(0, 0, 0, .3)


  .curl
    width: 20px
    height:20px
    position: absolute
    top:0
    left:0
    background-color: transparent;
    background-image: -webkit-linear-gradient(135deg, transparent, transparent 45%, rgba(0, 43, 54, .2) 50%,#aaa 50%,#bbb 56%,#ccc 62%,#f3f3f3 80%,#fff 100%)
    background-image: -moz-linear-gradient(135deg, transparent, transparent 45%, rgba(0, 43, 54, .2) 50%,#aaa 50%,#bbb 56%,#ccc 62%,#f3f3f3 80%,#fff 100%)
    background-image: -khtml-linear-gradient(135deg, transparent, transparent 45%, rgba(0, 43, 54, .2) 50%,#aaa 50%,#bbb 56%,#ccc 62%,#f3f3f3 80%,#fff 100%)
    background-image: -ms-linear-gradient(135deg, transparent, transparent 45%, rgba(0, 43, 54, .2) 50%,#aaa 50%,#bbb 56%,#ccc 62%,#f3f3f3 80%,#fff 100%)
    background-image: -o-linear-gradient(135deg, transparent, transparent 45%, rgba(0, 43, 54, .2) 50%,#aaa 50%,#bbb 56%,#ccc 62%,#f3f3f3 80%,#fff 100%)
    background-image: linear-gradient(135deg, transparent, transparent 45%, rgba(0, 43, 54, .2) 50%,#aaa 50%,#bbb 56%,#ccc 62%,#f3f3f3 80%,#fff 100%)
    box-shadow: 0 0 10px rgba(0, 0, 0, .5)
    transition: all .5s ease

    &:before,
    &:after 
      content: ''
      position: absolute
      z-index: -1
      left: 12.5%
      bottom: 5.8%
      width: 70%
      max-width: 300px
      max-height: 100px
      height: 55%
      box-shadow: 0 12px 15px rgba(0, 0, 0, .3)
      transform: skew(-10deg) rotate(-6deg)

    &:after 
      left: auto
      right: 5.8%
      bottom: auto
      top: 14.16%
      transform: skew(-15deg) rotate(-84deg)
